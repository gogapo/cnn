<!DOCTYPE html>
<html lang="pt-PT">
<head>
  <title>Aumento da renda em 2024</title>
</head>
<body>
  <h2>Aumento da renda em 2024</h2>

  <p>Insira o valor da sua renda atual:</p>
  <input type="number" id="renda-atual" />

  <button onclick="calcular()">Calcular</button>

  <p id="resultado"></p>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
 <script>
    function calcular() {
      const rendaAtual = parseFloat(document.getElementById("renda-atual").value);  // Convertendo para número.

      const aumento = 0.0694;
      const valorAumento = rendaAtual * aumento;
      const novaRenda = rendaAtual + valorAumento;
      const aumentoMensal = valorAumento.toFixed(2);  // Convertendo o aumento mensal para 2 casas decimais.
      const aumentoAnual = valorAumento * 12;

      const resultado = {
        "nova renda": novaRenda.toFixed(2) + "€",
        "aumento mensal": aumentoMensal + "€",
        "aumento anual": aumentoAnual.toFixed(2) + "€",
      };

      const resultadoFormatado = Object.entries(resultado).map(([key, value]) => `
        ${key}: ${value}</br>
      `).join("");

      document.getElementById("resultado").innerHTML = resultadoFormatado;
    }

    document.getElementById("renda-atual").addEventListener("keydown", (event) => {
      if (event.key === "Enter") {  // usando event.key em vez de event.keyCode
        calcular();
      }
    });
  </script>

</body>
</html>
